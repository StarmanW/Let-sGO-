<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:editTextColor">@color/editTextColor</item>
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:textColorSecondary">@color/whiteTextColor</item>
    </style>


    <!-- No Action Bar theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:editTextColor">@color/editTextColor</item>
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:textColorSecondary">@color/whiteTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EventDetailText" parent="TextAppearance.AppCompat.Subhead" />

    <style name="EventTitle" parent="TextAppearance.AppCompat.Headline" />

    <style name="EventDetailTitle" parent="TextAppearance.AppCompat.Headline" />
</resources>
